{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "declaration": true,
    "sourceMap": true,
    "module": "es6",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react"
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ]
}
