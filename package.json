{
  "name": "react-bem-classes",
  "version": "0.0.1",
  "description": "Decorator/utility function to expand BEM classes in React elements",
  "main": "./build/wrapper.js",
  "exports": {
    "import": "./build/es6/index.mjs",
    "require": "./build/wrapper.js"
  },
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:peterjwest/react-bem-classes.git"
  },
  "files": [
    "/build"
  ],
  "author": "Peter West",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/peterjwest/react-bem-classes/issues"
  },
  "keywords": [
    "jsx",
    "react",
    "preact",
    "classes",
    "class",
    "bem"
  ],
  "homepage": "https://github.com/peterjwest/react-bem-classes#readme",
  "scripts": {
    "audit-dependencies": "yarn audit; [[ $? -ge 4 ]] && exit 1 || exit 0",
    "build": "yarn build:es6 && yarn build:es5",
    "build:es6": "rm -rf build/es6 && tsc --project tsconfig-build-es6.json && convert-extension mjs build/es6",
    "build:es5": "rm -rf build/es5 && tsc --project tsconfig-build-es5.json && convert-extension cjs build/es5",
    "lint:ts": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "test:coverage": "rm -rf coverage && NODE_DEBUG=nyc nyc mocha 'tests/*.ts'",
    "test:unit": "mocha --require ts-node/register 'tests/*.ts'",
    "test:unit:es5": "mocha 'tests/*.cjs'",
    "test:unit:es6": "mocha 'tests/*.mjs'",
    "test:snippets": "test-snippets"
  },
  "peerDependencies": {
    "react": ">12"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-react": "^7.13.13",
    "@babel/register": "^7.13.16",
    "@types/lodash": "4.14.169",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.3.0",
    "@types/react": "^17.0.6",
    "@types/react-dom": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "convert-extension": "^0.2.3",
    "eslint": "^7.27.0",
    "mocha": "^8.4.0",
    "node-html-parser": "^3.3.0",
    "nyc": "^15.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "test-snippets": "^0.2.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
